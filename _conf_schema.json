        "type": "object",
        "hint": "",
        "items": {
            "base_url": {
                "description": "GPT-SoVITS API 的 URL",
                "type": "string",
                "hint": "必填！GPT_SoVITS官方整合包默认为http://127.0.0.1:9880，第三方整合包可能不同",
